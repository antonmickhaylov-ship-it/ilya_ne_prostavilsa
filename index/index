<body>
    <div class="container">
        <h1>üßÉ –ü–æ–≤–æ–¥—ã –ò–ª—å–∏</h1>
        
        <div class="add-reason">
            <textarea id="reasonText" placeholder="–í–≤–µ–¥–∏—Ç–µ –ø–æ–≤–æ–¥, –∑–∞ –∫–æ—Ç–æ—Ä—ã–π –ò–ª—å—è –Ω–µ –ø—Ä–æ—Å—Ç–∞–≤–∏–ª—Å—è..."></textarea>
            <button onclick="addReason()">‚ûï –î–æ–±–∞–≤–∏—Ç—å –ø–æ–≤–æ–¥</button>
        </div>
        
        <div id="reasonsList">
            <div class="empty">–ó–∞–≥—Ä—É–∑–∫–∞ –ø–æ–≤–æ–¥–æ–≤...</div>
        </div>

        <div class="admin-panel">
            <button class="admin-btn" onclick="clearAllData()">üóëÔ∏è –û—á–∏—Å—Ç–∏—Ç—å –≤—Å–µ (–∞–¥–º–∏–Ω)</button>
            <button class="admin-btn" onclick="exportData()">üì§ –≠–∫—Å–ø–æ—Ä—Ç –¥–∞–Ω–Ω—ã—Ö</button>
        </div>
    </div>

    <script>
        // –ó–∞–≥—Ä—É–∂–∞–µ–º –ø–æ–≤–æ–¥—ã –ø—Ä–∏ –æ—Ç–∫—Ä—ã—Ç–∏–∏
        loadReasons();
        
        // –§—É–Ω–∫—Ü–∏—è –¥–æ–±–∞–≤–ª–µ–Ω–∏—è –ø–æ–≤–æ–¥–∞
        function addReason() {
            const reasonText = document.getElementById('reasonText').value.trim();
            
            if (!reasonText) {
                alert('–í–≤–µ–¥–∏—Ç–µ –ø–æ–≤–æ–¥!');
                return;
            }
            
            // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤ localStorage
            let reasons = JSON.parse(localStorage.getItem('ilya_reasons') || '[]');
            
            // –î–æ–±–∞–≤–ª—è–µ–º –Ω–æ–≤—ã–π –ø–æ–≤–æ–¥
            reasons.push({
                text: reasonText,
                date: new Date().toLocaleString('ru-RU'),
                author: '–ö–æ–ª–ª–µ–≥–∞'
            });
            
            // –°–æ—Ö—Ä–∞–Ω—è–µ–º –æ–±—Ä–∞—Ç–Ω–æ
            localStorage.setItem('ilya_reasons', JSON.stringify(reasons));
            
            // –û—á–∏—â–∞–µ–º –ø–æ–ª–µ –∏ –æ–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫
            document.getElementById('reasonText').value = '';
            loadReasons();
            
            alert('‚úÖ –ü–æ–≤–æ–¥ –¥–æ–±–∞–≤–ª–µ–Ω!');
        }
        
        // –§—É–Ω–∫—Ü–∏—è –∑–∞–≥—Ä—É–∑–∫–∏ –ø–æ–≤–æ–¥–æ–≤
        function loadReasons() {
            const reasons = JSON.parse(localStorage.getItem('ilya_reasons') || '[]');
            const list = document.getElementById('reasonsList');
            
            if (reasons.length === 0) {
                list.innerHTML = '<div class="empty">–ü–æ–∫–∞ –Ω–µ—Ç –ø–æ–≤–æ–¥–æ–≤. –ë—É–¥—å—Ç–µ –ø–µ—Ä–≤—ã–º! üò¥</div>';
                return;
            }
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø–æ–≤–æ–¥—ã (–Ω–æ–≤—ã–µ —Å–≤–µ—Ä—Ö—É)
            list.innerHTML = reasons.slice().reverse().map(reason => `
                <div class="reason-item">
                    <div class="reason-text">${reason.text}</div>
                    <div class="reason-meta">
                        <span>üë§ ${reason.author}</span>
                        <span>üìÖ ${reason.date}</span>
                    </div>
                </div>
            `).join('');
        }

        // –ê–¥–º–∏–Ω—Å–∫–∏–µ —Ñ—É–Ω–∫—Ü–∏–∏
        function clearAllData() {
            if (confirm('–¢–æ—á–Ω–æ –æ—á–∏—Å—Ç–∏—Ç—å –í–°–ï –ø–æ–≤–æ–¥—ã?')) {
                localStorage.removeItem('ilya_reasons');
                loadReasons();
                alert('–í—Å–µ –ø–æ–≤–æ–¥—ã –æ—á–∏—â–µ–Ω—ã!');
            }
        }

        function exportData() {
            const reasons = JSON.parse(localStorage.getItem('ilya_reasons') || '[]');
            const dataStr = JSON.stringify(reasons, null, 2);
            const blob = new Blob([dataStr], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = '–ø–æ–≤–æ–¥—ã_–∏–ª—å–∏.json';
            a.click();
        }
        
        // –ê–≤—Ç–æ–æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∫–∞–∂–¥—ã–µ 10 —Å–µ–∫—É–Ω–¥
        setInterval(loadReasons, 10000);
    </script>
